#:kivy 1.11.0
<AbortButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    button_color: (.33, .33, .33, 1)
    border_radius: [10]
    border: [10, 10, 10, 10]
    width: self.height
    canvas.before:
        Color:
            rgba: self.button_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
        Color:
            rgba: (1, 1, 1, 1)
        Line:
            points: self.pos[0] + self.size[0]*.3, self.pos[1] + self.size[1]*.3, self.pos[0] + self.size[0]*.7, self.pos[1] + self.size[1]*.7
            width: 3
        Line:
            points: self.pos[0] + self.size[0]*.3, self.pos[1] + self.size[1]*.7, self.pos[0] + self.size[0]*.7, self.pos[1] + self.size[1]*.3
            width: 3