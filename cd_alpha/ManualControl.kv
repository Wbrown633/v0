
<ManualControl>:
    
    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            font_size: sp(32)
            text: 'Volume Dispensed: ' + root.info
        
        GridLayout:
            cols: 4
            Button:
                text: root.run_status
                on_press: root.start_stop()
            Button:
                id:"infuse_withdraw"
                text: root.run_direction
                on_press: root.change_direction()
            Button:
                text: 'Rate'
            Button:
                id: "syringe_switch"
                text: root.syringe
                on_press: root.select_syringe()