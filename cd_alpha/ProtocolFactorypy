
from enum import Enum
from dataclasses import dataclass
import json


TEST_FILE_LOCATION = "test_output.json"

@dataclass
class StepType(Enum):
    PUMP = 1
    INCUBATE = 2
    PUMPANDRELEASE = 3

@dataclass
class Target(Enum):
    WASTE = 1
    LYSATE = 2

@dataclass
class ScreenType(Enum):
    MachineActionScreen = 1
    UserActionScreen = 2


@dataclass
class Step:
    step_name: str
    header_text: str
    description_text: str
    screentype: ScreenType
    steptype: StepType
    target: Target
    volume: float
    flowrate: float
    wait_time: int

    def makejson(self):
        with open(TEST_FILE_LOCATION, 'w') as f:
            json.dump({self.step_name: {"type": self.screentype.name, "header": self.header_text, "description": self.description_text, 
            "action": {self.steptype.name: {"target": self.target.name, "vol_ml": self.volume, "rate_mh": self.flowrate, "eq_time": self.wait_time}}}}, f, indent=4)

