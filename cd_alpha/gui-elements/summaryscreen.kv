#:kivy 1.11.0

<SummaryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0

        Label:
            text: scrren.add_rows()
        
        BoxLayout:
            size_hint_y: None
            padding: 80, 20
            id: next_button_layout
            
            RoundedButton:
                on_release: app.root.next_step()
                padding: 20, 20
                size_hint_y: None
                height: self.texture_size[1]
                text: root.next_text
                bold: True

