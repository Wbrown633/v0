#:kivy 1.11.0

<SummaryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0
        Label:
            size_hint_y: None
            text: root.header_text
            bold: True
            font_size: dp(42)
            text_size: self.width, None
            height: self.texture_size[1]
            halign: "center"
        
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                cols: 5
                id: summary_layout
                size_hint_y: 0.8
                Label:
                    text: "Step #"
                    font_size: dp(20)
                    size_hint_x: 0.1

                Label: 
                    text: "Material"
                    font_size: dp(20)
                
                Label:
                    text: "Flowrate (mL/h)"
                    font_size: dp(20)

                Label:
                    text: "Volume (mL)"
                    font_size: dp(20)

                Label:
                    text: "Step Duration"
                    font_size: dp(20)
            
        BoxLayout:
            size_hint_y: None
            padding: 80, 20
            id: next_button_layout
            
            RoundedButton:
                on_release: app.root.next_step()
                padding: 20, 20
                size_hint_y: None
                height: self.texture_size[1]
                text: root.next_text
                bold: True

